<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnasayfaFragment">

    <TextView
        android:id="@+id/hosgeldinizTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="@string/anasayfa"
        android:textColor="@color/yazi"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kaydetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="364dp"
        android:backgroundTint="@color/button"
        android:text="@string/button_yazi"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hosgeldinizTextview" />

    <EditText
        android:id="@+id/adEdittext"
        android:layout_width="250dp"
        android:layout_height="74dp"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="Adınızı giriniz."
        android:inputType="text"
        android:textColorHint="#86000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hosgeldinizTextview" />

    <EditText
        android:id="@+id/soyadedittext"
        android:layout_width="262dp"
        android:layout_height="59dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:hint="Soyadınızı giriniz."
        android:inputType="text"
        android:textColorHint="#86000000"
        app:layout_constraintBottom_toTopOf="@+id/kaydetButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>